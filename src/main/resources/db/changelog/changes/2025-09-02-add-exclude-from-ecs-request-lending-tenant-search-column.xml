<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet id="addExcludeFromEcsRequestLendingTenantSearchColumnToTlrSettingsTable" author="Roman Barannyk">
        <preConditions onFail="WARN">
            <not>
                <columnExists tableName="tlr_settings" columnName="exclude_from_ecs_request_lending_tenant_search"/>
            </not>
        </preConditions>
        <addColumn tableName="tlr_settings">
            <column name="exclude_from_ecs_request_lending_tenant_search" type="text[]" defaultValueComputed="ARRAY[]::text[]">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>
