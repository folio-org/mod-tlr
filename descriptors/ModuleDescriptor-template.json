{
  "id": "@artifactId@-@version@",
  "name": "Folio mod-tlr module",
  "provides": [
    {
      "id": "ecs-tlr",
      "version": "1.0",
      "handlers": [
        {
          "methods": ["GET"],
          "pathPattern": "/tlr/ecs-tlr/{requestId}",
          "permissionsRequired": ["tlr.ecs-tlr.item.get"],
          "modulePermissions": []
        },
        {
          "methods": ["POST"],
          "pathPattern": "/tlr/ecs-tlr",
          "permissionsRequired": ["tlr.ecs-tlr.post"],
          "modulePermissions": []
        }
      ]
    },
    {
      "id": "_tenant",
      "version": "1.2",
      "interfaceType": "system",
      "handlers": [
        {
          "methods": ["POST"],
          "pathPattern": "/_/tenant"
        }, {
          "methods": ["DELETE"],
          "pathPattern": "/_/tenant"
        }
      ]
    },
    {
      "id": "_timer",
      "version": "1.0",
      "interfaceType": "system",
      "handlers": [
        {
          "methods": [ "POST" ],
          "pathPattern": "/tlr/ecs-tlr-processing",
          "unit": "second",
          "delay": "30"
        }
      ]
    }
  ],
  "permissionSets" : [
    {
      "permissionName": "tlr.ecs-tlr.item.get",
      "displayName": "ecs-tlr - get request by id",
      "description": "get ecs-tlr request"
    },
    {
      "permissionName": "tlr.ecs-tlr.post",
      "displayName": "ecs-tlr - create request",
      "description": "create ecs-tlr request"
    }
  ],
  "requires": [],
  "launchDescriptor": {
    "dockerImage": "@artifactId@:@version@",
    "dockerPull": false,
    "dockerArgs": {
      "HostConfig": {
        "Memory": 357913941,
        "PortBindings": { "8081/tcp": [ { "HostPort": "%p" } ] }
      }
    },
    "env": [
      { "name": "JAVA_OPTIONS",
        "value": "-XX:MaxRAMPercentage=66.0"
      },
      { "name": "DB_HOST", "value": "postgres" },
      { "name": "DB_PORT", "value": "5432" },
      { "name": "DB_USERNAME", "value": "folio_admin" },
      { "name": "DB_PASSWORD", "value": "folio_admin" },
      { "name": "DB_DATABASE", "value": "okapi_modules" },
      { "name": "DB_QUERYTIMEOUT", "value": "60000" },
      { "name": "DB_CHARSET", "value": "UTF-8" },
      { "name": "DB_MAXPOOLSIZE", "value": "5" }
    ]
  }
}
